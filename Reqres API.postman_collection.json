	"item": [
		{
			"name": "Create User - Valid Data",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Teste para verificar se o status code é 201\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// Teste para verificar se a resposta contém os campos obrigatórios\r",
							"pm.test(\"Response contains id and createdAt\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property(\"id\");\r",
							"    pm.expect(jsonData).to.have.property(\"createdAt\");\r",
							"});\r",
							"\r",
							"// Teste para verificar se a resposta contém os dados corretos\r",
							"pm.test(\"Response contains the correct data\", function () {\r",
							"    var requestJson = JSON.parse(pm.request.body.raw);\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.name).to.eql(requestJson.name);\r",
							"    pm.expect(jsonData.job).to.eql(requestJson.job);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"John Doe\",\r\n    \"job\": \"Developer\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://reqres.in/api/users",
					"protocol": "https",
					"host": [
						"reqres",
						"in"
					],
					"path": [
